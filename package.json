{
  "name": "nodejs-espncricinfo",
  "version": "1.0.0",
  "description": "An unofficial nodejs wrapper for EspnCricinfo",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm run lint",
