    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cricket",
    "espncricinfo"
  ],
  "author": "Rohin Chopra",
  "license": "ISC",
